@model FactoryX.Application.DTOs.Requests.ProductRequests.InsertProductRequest
@{
    ViewData["Title"] = "新增产品";
}
<div class="container py-4">
    @await Html.PartialAsync("_Alert")
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-4 text-center"><i class="bi bi-box-seam text-success me-2"></i>新增产品
                    </h2>
                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">产品名称</label>
                            <input asp-for="Name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">产品代码</label>
                            <input asp-for="Code" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">产品描述</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i>
                                取消</a>
                            <button type="submit" class="btn btn-success px-4"><i class="bi bi-check-lg"></i>
                                创建</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}