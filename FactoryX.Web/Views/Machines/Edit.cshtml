@model FactoryX.Application.DTOs.Requests.MachineRequests.UpdateMachineRequest
@{
    ViewData["Title"] = "编辑机器";
}
<div class="container py-4">
    @await Html.PartialAsync("_Alert")
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-4 text-center"><i class="bi bi-pencil text-warning me-2"></i>编辑机器</h2>
                    <form asp-action="Edit" method="post" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">机器名称</label>
                            <input asp-for="Name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">状态</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">运行中</option>
                                <option value="Inactive">停机</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">产能</label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Capacity" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i>
                                取消</a>
                            <button type="submit" class="btn btn-warning px-4"><i class="bi bi-check-lg"></i>
                                保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}