@model FactoryX.Application.DTOs.ProductionRecordDto
@{
    ViewData["Title"] = "删除生产记录";
}

<h2 class="fw-bold mb-4 text-danger">删除生产记录</h2>

<div class="glass-card p-4 shadow-sm mx-auto" style="max-width: 500px;">
    <p class="mb-3">您确定要删除以下生产记录吗？</p>
    <dl class="row mb-0">
        <dt class="col-5">工单</dt>
        <dd class="col-7">@Model.WorkOrderId <!-- WorkOrder info eklenecek --></dd>
        <dt class="col-5">操作员</dt>
        <dd class="col-7">@Model.OperatorId <!-- Operator info eklenecek --></dd>
        <dt class="col-5">生产数量</dt>
        <dd class="col-7">@Model.QuantityProduced</dd>
        <dt class="col-5">日期/时间</dt>
        <dd class="col-7">@Model.Timestamp.ToString("g")</dd>
    </dl>
    <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">删除</button>
        <a asp-action="Index" class="btn btn-outline-secondary">取消</a>
    </form>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>