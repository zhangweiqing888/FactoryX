@model FactoryX.Application.DTOs.ProductionRecordDto
@{
    ViewData["Title"] = "生产记录详情";
}

<h2 class="fw-bold mb-4">生产记录详情</h2>

<div class="glass-card p-4 shadow-sm mx-auto" style="max-width: 500px;">
    <dl class="row mb-0">
        <dt class="col-5">工单</dt>
        <dd class="col-7">@Model.WorkOrderName</dd>
        <dt class="col-5">操作员</dt>
        <dd class="col-7">@Model.OperatorName</dd>
        <dt class="col-5">生产数量</dt>
        <dd class="col-7">@Model.QuantityProduced</dd>
        <dt class="col-5">日期/时间</dt>
        <dd class="col-7">@Model.Timestamp.ToString("g")</dd>
    </dl>
    <div class="mt-4 d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">编辑</a>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>