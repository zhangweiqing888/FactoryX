@model FactoryX.Application.DTOs.WorkOrderDto
@{
    ViewData["Title"] = "工单详情";
}

<h2 class="fw-bold mb-4">工单详情</h2>

<div class="glass-card p-4 shadow-sm mx-auto" style="max-width: 500px;">
    <dl class="row mb-0">
        <dt class="col-5">产品</dt>
        <dd class="col-7">@Model.ProductName</dd>
        <dt class="col-5">机器</dt>
        <dd class="col-7">@Model.MachineName</dd>
        <dt class="col-5">数量</dt>
        <dd class="col-7">@Model.Quantity</dd>
        <dt class="col-5">开始日期</dt>
        <dd class="col-7">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-5">结束日期</dt>
        <dd class="col-7">@Model.EndDate.ToShortDateString()</dd>
        <dt class="col-5">状态</dt>
        <dd class="col-7">@Model.Status</dd>
    </dl>
    <div class="mt-4 d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">编辑</a>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>