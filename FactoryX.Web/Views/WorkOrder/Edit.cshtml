@model FactoryX.Application.DTOs.WorkOrderDto
@{
    ViewData["Title"] = "编辑工单";
    // Product ve Machine listeleri ileride ViewBag ile gelecek
}

<partial name="_Alert" />

<h2 class="fw-bold mb-4">编辑工单</h2>

<form asp-action="Edit" method="post" class="glass-card p-4 shadow-sm" autocomplete="off">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label">产品</label>
        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
            <option value="">请选择</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MachineId" class="form-label">机器</label>
        <select asp-for="MachineId" class="form-select" asp-items="ViewBag.Machines">
            <option value="">请选择</option>
        </select>
        <span asp-validation-for="MachineId" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">数量</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">开始日期</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">结束日期</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">状态</label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary rounded-pill px-4">保存</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">取消</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
        max-width: 600px;
        margin: auto;
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>