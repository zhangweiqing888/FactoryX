@model FactoryX.Application.DTOs.Responses.OperatorResponses.GetOperatorResponse
@{
    ViewData["Title"] = "Operatör Detay";
}

<h2 class="fw-bold mb-4">Operatör Detay</h2>

<div class="glass-card p-4 shadow-sm mx-auto" style="max-width: 400px;">
    <dl class="row mb-0">
        <dt class="col-5">Ad Soyad</dt>
        <dd class="col-7">@Model.Name</dd>
        <dt class="col-5">Çalışan No</dt>
        <dd class="col-7">@Model.EmployeeNumber</dd>
    </dl>
    <div class="mt-4 d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 1rem;
        backdrop-filter: blur(6px);
    }

    [data-bs-theme="dark"] .glass-card {
        background: rgba(30, 30, 40, 0.7);
    }
</style>